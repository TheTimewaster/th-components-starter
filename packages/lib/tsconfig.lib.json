{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "declarationDir": "dist/types",
    "declaration": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "sourceMap": true,
    "types": [
      "vite/client"
    ],
  },
  "include": ["./src/**/*.ts", "./src/**/*.vue"],
}
